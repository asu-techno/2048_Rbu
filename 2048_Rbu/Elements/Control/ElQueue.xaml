<UserControl x:Class="_2048_Rbu.Elements.Control.ElQueue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_2048_Rbu.Elements.Control"
             xmlns:classes="clr-namespace:AsuBetonLibrary.Classes;assembly=AsuBetonLibrary"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type local:ElQueueViewModel}}"
             Height="346" Width="1240" >

    <Border Background="#E7EAF3"
            CornerRadius="3,0,0,0"
            BorderThickness="1"
            BorderBrush="#B8BBC0">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1020"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="241"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>

                <ListView Grid.Row="3"
                          Margin="20,0,20,0"
                          AlternationCount="2">
                    
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Margin" Value="10,0,0,0"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Background" Value="#F3F4F8"/>
                            <Setter Property="Foreground" Value="#3C3C3C"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <Border x:Name="brd"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                                <Setter Property="Background" Value="#E1E5F0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.View>
                        <GridView>
                            
                            <GridViewColumn Width="50" DisplayMemberBinding="{Binding Id}">
                                <GridViewColumnHeader Background="#80858B" 
                                                      Height="30" 
                                                      HorizontalAlignment="Stretch"
                                                      BorderThickness="0,0,1,0"
                                                      BorderBrush="#E1E5F0">
                                    <TextBlock Text="№" 
                                               TextWrapping="WrapWithOverflow"
                                               Foreground="White"
                                               FontFamily="{StaticResource Jost}"
                                               FontWeight="Regular"
                                               FontSize="14"/>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn Width="170" DisplayMemberBinding="{Binding Task.Customer.Name}">
                                <GridViewColumnHeader Background="#80858B" 
                                                      Height="30" 
                                                      BorderThickness="0,0,1,0"
                                                      BorderBrush="#E1E5F0"
                                                      HorizontalAlignment="Stretch"
                                                      HorizontalContentAlignment="Left"
                                                      Padding="20,0"
                                                      >
                                    <TextBlock Text="Заказчик" 
                                               TextWrapping="WrapWithOverflow"
                                               Foreground="White"
                                               FontFamily="{StaticResource Jost}"
                                               FontWeight="Regular"
                                               FontSize="14"/>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn Width="210" DisplayMemberBinding="{Binding Task.Recipe.Group.Name}">
                                <GridViewColumnHeader Background="#80858B" 
                                                      Height="30" 
                                                      HorizontalAlignment="Stretch"
                                                      HorizontalContentAlignment="Left"
                                                      Padding="20,0"
                                                      BorderThickness="0,0,1,0"
                                                      BorderBrush="#E1E5F0"
                                                      >
                                    <TextBlock Text="Группа рецептов" 
                                               TextWrapping="WrapWithOverflow"
                                               Foreground="White"
                                               FontFamily="{StaticResource Jost}"
                                               FontWeight="Regular"
                                               FontSize="14"/>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn Width="250" DisplayMemberBinding="{Binding Task.Recipe.Name}">
                                <GridViewColumnHeader Background="#80858B" 
                                                      Height="30" 
                                                      HorizontalAlignment="Stretch"
                                                      HorizontalContentAlignment="Left"
                                                      Padding="20,0"
                                                      BorderThickness="0,0,1,0"
                                                      BorderBrush="#E1E5F0"
                                                      >
                                    <TextBlock Text="Рецепты" 
                                               TextWrapping="WrapWithOverflow"
                                               Foreground="White"
                                               FontFamily="{StaticResource Jost}"
                                               FontWeight="Regular"
                                               FontSize="14"/>
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn Width="109" DisplayMemberBinding="{Binding Task.Volume}">
                                <GridViewColumnHeader Background="#80858B" 
                                                      Height="30" 
                                                      HorizontalAlignment="Stretch"
                                                      HorizontalContentAlignment="Left"
                                                      Padding="15,0"
                                                      BorderThickness="0,0,1,0"
                                                      BorderBrush="#E1E5F0"
                                                      >
                                    <TextBlock Text="Объем &#xa;задания"
                                               TextWrapping="WrapWithOverflow"
                                               Foreground="White"
                                               FontFamily="{StaticResource Jost}"
                                               FontWeight="Regular"
                                               FontSize="12"
                                               VerticalAlignment="Center"
                                               />
                                </GridViewColumnHeader>
                            </GridViewColumn>

                            <GridViewColumn Width="89" DisplayMemberBinding="{Binding Task.BatchVolume}">
                                <GridViewColumnHeader Background="#80858B" 
                                                      Height="30" 
                                                      HorizontalAlignment="Stretch"
                                                      HorizontalContentAlignment="Left"
                                                      Padding="15,0"
                                                      BorderThickness="0,0,1,0"
                                                      BorderBrush="#E1E5F0"
                                                      >
                                    <TextBlock Text="Объем &#xa;замеса"
                                               TextWrapping="WrapWithOverflow"
                                               Foreground="White"
                                               FontFamily="{StaticResource Jost}"
                                               FontWeight="Regular"
                                               FontSize="12"
                                               VerticalAlignment="Center"
                                               />
                                </GridViewColumnHeader>
                            </GridViewColumn>
                            <GridViewColumn Width="95" DisplayMemberBinding="{Binding Task.BatchesAmount}">
                                <GridViewColumnHeader Background="#80858B" 
                                                      Height="30" 
                                                      HorizontalAlignment="Stretch"
                                                      HorizontalContentAlignment="Left"
                                                      Padding="15,0"
                                                      BorderThickness="0,0,1,0"
                                                      BorderBrush="#E1E5F0"
                                                      >
                                    <TextBlock Text="Количество &#xa;замесов"
                                               TextWrapping="WrapWithOverflow"
                                               Foreground="White"
                                               FontFamily="{StaticResource Jost}"
                                               FontWeight="Regular"
                                               FontSize="12"
                                               VerticalAlignment="Center"
                                               />
                                </GridViewColumnHeader>
                            </GridViewColumn>



                        </GridView>
                    </ListView.View>
                </ListView>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    
                    <TextBlock 
                           FontFamily="{StaticResource Jost}"
                           FontWeight="Regular"
                           FontSize="14"
                           Height="20"
                           Foreground="#878A91"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="ОЧЕРЕДЬ ЗАДАНИЙ"
                           Padding="20,0,0,0">
                    </TextBlock>

                    <!--Кнопка запрет-->
                    <Button ToolTip="Запретить загрузку рецептов"
                            Width="300"
                            Height="30"
                            Margin="544,0,0,0"
                            Style="{StaticResource NewButton}"
                            Command="{Binding StopLoadTaskCommand}">
                        
                        <StackPanel Orientation="Horizontal">

                            <Image Source="/Images/Indicators/Warning.png"
                                   Width="18"
                                   Height="16">
                            </Image>

                            <TextBlock Text="Запрет загрузки рецептов"
                                       FontFamily="{StaticResource Jost}"
                                       FontWeight="Regular"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Padding="7,0,0,0"
                                       >

                            </TextBlock>
                            
                        </StackPanel>

                    </Button>
                    
                </StackPanel>
                
            </Grid>

            <StackPanel Grid.Column="1">

                <!--Кнопка добавить-->
                <Button Width="180"
                        Height="30"
                        Margin="0,20,0,0"
                        Style="{StaticResource NewButton}"
                        ToolTip="Добавить рецепт" 
                        Command="{Binding AddCommand}"
                        >
                    <StackPanel Orientation="Horizontal">

                        <Image Source="/Images/Indicators/Plus.png"
                           Width="14"
                           Height="14">

                        </Image>
                        
                        <TextBlock Text="Добавить"
                                   FontFamily="{StaticResource Jost}"
                                   FontWeight="Regular"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Padding="7,0,0,0"
                                   >

                        </TextBlock>
                        
                    </StackPanel>

                </Button>

                <Button ToolTip="Повысить в очереди выбранный рецепт" 
                        Command="{Binding UpRecipeCommand}"
                        FontSize="21"
                        Width="180"
                        Height="30"
                        Margin="0,16,0,0"
                        Style="{StaticResource QueueButton}"
                        Tag="{Binding SelTaskQueueItem}">

                    <Image Source="/Images/Indicators/Up.png"
                           Width="19"
                           Height="12">

                    </Image>

                </Button>

                <Button ToolTip="Понизить в очереди выбранный рецепт" 
                        Command="{Binding DownRecipeCommand}"
                        x:Name="Down"
                        FontSize="21"
                        Width="180"
                        Height="30"
                        Margin="0,16,0,0"
                        Style="{StaticResource QueueButton}"
                        Tag="{Binding SelTaskQueueItem}">

                    <Image Source="/Images/Indicators/Down.png"
                           Width="19"
                           Height="12">

                    </Image>

                </Button>

                <Button ToolTip="Скопировать выбранный рецепт" 
                        Command="{Binding CopyCommand}"
                        Content="Копировать"
                        FontSize="16"
                        Width="180"
                        Height="30"
                        Margin="0,16,0,0"
                        Style="{StaticResource QueueButton}">
                </Button>

                <Button ToolTip="Удалить выбранный рецепт из очереди" 
                        Command="{Binding DeleteCommand}"
                        Content="Удалить"
                        FontSize="16"
                        Width="180"
                        Height="30"
                        Margin="0,16,0,0"
                        Style="{StaticResource QueueButton}">
                </Button>

                <Button ToolTip="Подробнее о выбранном рецепте" 
                        Command="{Binding DetailsCommand}"
                        Content="О рецепте"
                        FontSize="16"
                        Width="180"
                        Height="30"
                        Margin="0,16,0,0"
                        Style="{StaticResource QueueButton}">
                </Button>

                <Button ToolTip="Выгрузить текущий рецепт" 
                        Command="{Binding UnloadTask}"
                        Content="Выгрузить"
                        FontSize="16"
                        Width="180"
                        Height="30"
                        Margin="0,16,0,0"
                        Style="{StaticResource NewButton}"
                        Tag="{Binding TaskId}">

                </Button>

            </StackPanel>
            
        </Grid>
    </Border>
    
    
