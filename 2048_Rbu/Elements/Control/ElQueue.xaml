                                   FontFamily="{StaticResource Jost}"
                                   FontWeight="Regular"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Padding="7,0,0,0"
                                   >

                        </TextBlock>
                        
                    </StackPanel>

                </Button>

                <Button ToolTip="Повысить в очереди выбранный рецепт" 
                        Command="{Binding UpRecipeCommand}"
                        FontSize="21"
                        Width="180"
                        Height="30"
                        Margin="0,16,0,0"
                        Style="{StaticResource QueueButton}"
                        Tag="{Binding SelTaskQueueItem}">

                    <Image Source="/Images/Indicators/Up.png"
                           Width="19"
                           Height="12">

                    </Image>

                </Button>

                <Button ToolTip="Понизить в очереди выбранный рецепт" 
                        Command="{Binding DownRecipeCommand}"
                        x:Name="Down"
                        FontSize="21"
                        Width="180"
                        Height="30"
                        Margin="0,16,0,0"
                        Style="{StaticResource QueueButton}"
                        Tag="{Binding SelTaskQueueItem}">

                    <Image Source="/Images/Indicators/Down.png"
                           Width="19"
                           Height="12">

                    </Image>

                </Button>

                <Button ToolTip="Скопировать выбранный рецепт" 
                        Command="{Binding CopyCommand}"
                        Content="Копировать"
                        FontSize="16"
                        Width="180"
                        Height="30"
                        Margin="0,16,0,0"
                        Style="{StaticResource QueueButton}"
                        Tag="{Binding SelTaskQueueItem}">
                </Button>

                <Button ToolTip="Удалить выбранный рецепт из очереди" 
                        Command="{Binding DeleteCommand}"
                        Content="Удалить"
                        FontSize="16"
                        Width="180"
                        Height="30"
                        Margin="0,16,0,0"
                        Style="{StaticResource QueueButton}"
                        Tag="{Binding SelTaskQueueItem}">
                </Button>

                <Button ToolTip="Подробнее о выбранном рецепте" 
