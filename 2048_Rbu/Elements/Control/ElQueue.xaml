                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Width="206"
                            Height="30"
                            Margin="0,24,0,0"
                            Command="{Binding StopLoadTaskCommand}">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Canvas>
                                                <Border x:Name="border1" Canvas.Left="0" 
                                                        Canvas.ZIndex="0"
                                                        BorderThickness="2"
                                                        CornerRadius="5,0,0,5"
                                                        BorderBrush="#3A85DD"
                                                        Background="#FFFFFF"
                                                        Visibility="Visible"
                                                        Width="107" 
                                                        Height="{TemplateBinding Height}"
                                                        HorizontalAlignment="Left">

                                                    <TextBlock x:Name="border1_txt"
                                                               FontFamily="{StaticResource Jost}"
                                                               FontSize="16"
                                                               FontWeight="Medium"
                                                               Text="Запрещена"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Foreground="#3A85DD">
                                                    </TextBlock>
                                                    
                                                </Border>
                                                <Border x:Name="border2" 
                                                        Canvas.Right="0"
                                                        Canvas.ZIndex="0"
                                                        CornerRadius="0,5,5,0"
                                                        BorderBrush="#3A85DD"
                                                        BorderThickness="2"
                                                        Height="{TemplateBinding Height}"
                                                        Background="#FFFFFF"
                                                        Visibility="Visible"
                                                        Width="107"
                                                        HorizontalAlignment="Right"
                                                        >
