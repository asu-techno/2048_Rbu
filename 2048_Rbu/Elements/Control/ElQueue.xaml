                                                               FontFamily="{StaticResource Jost}"
                                                               FontSize="16"
                                                               FontWeight="Medium"
                                                               Text="Разрешена"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Foreground="#3A85DD">
                                                    </TextBlock>
                                                </Border>

                                                <ContentPresenter Content="{TemplateBinding Content}"
                                                                  HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalAlignment}"/>
                                                
                                            </Canvas>

                                            <ControlTemplate.Triggers>
                                                <DataTrigger Binding="{Binding StopLoadTasks}" Value="True">
                                                    <Setter TargetName="border1" Property="Canvas.ZIndex" Value="0"/>
                                                    <Setter TargetName="border1" Property="Background" Value="#E1B518"/>
                                                    <Setter TargetName="border1" Property="BorderBrush" Value="#333538"/>
                                                    <Setter TargetName="border1_txt" Property="Foreground" Value="#333538"/>
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding StopLoadTasks}" Value="False">
                                                    <Setter TargetName="border1" Property="Canvas.ZIndex" Value="1"/>
                                                    <Setter TargetName="border2" Property="Background" Value="#9EE4A6"/>
                                                    <Setter TargetName="border2" Property="BorderBrush" Value="#333538"/>
                                                    <Setter TargetName="border2_txt" Property="Foreground" Value="#333538"/>
                                                </DataTrigger>

                                                <!--For Test-->
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border1" Property="Canvas.ZIndex" Value="0"/>
                                                    <Setter TargetName="border1" Property="Background" Value="#E1B518"/>
                                                    <Setter TargetName="border1" Property="BorderBrush" Value="#333538"/>
                                                    <Setter TargetName="border1_txt" Property="Foreground" Value="#333538"/>
                                                </Trigger>

                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="border1" Property="Canvas.ZIndex" Value="1"/>
                                                    <Setter TargetName="border2" Property="Background" Value="#9EE4A6"/>
                                                    <Setter TargetName="border2" Property="BorderBrush" Value="#333538"/>
                                                    <Setter TargetName="border2_txt" Property="Foreground" Value="#333538"/>
                                                </Trigger>
                                                
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
