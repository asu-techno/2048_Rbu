                        Content="Копировать"
                        FontSize="16"
                        Width="180"
                        Height="30"
                        Margin="0,19,0,0"
                        Style="{StaticResource QueueButton}"
                        Tag="{Binding SelTaskQueueItem}"
                        >
                </Button>

                <Button ToolTip="Удалить выбранный рецепт из очереди" 
                        Command="{Binding DeleteCommand}"
                        Content="Удалить"
                        FontSize="16"
                        Width="180"
                        Height="30"
                        Margin="0,19,0,0"
                        Style="{StaticResource QueueButton}"
                        Tag="{Binding SelTaskQueueItem}">
                </Button>

