                        <Setter Property="Fill" Value="Salmon"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding StatusArray[9].StatusItem}" Value="True">
                                <Setter Property="Fill" Value="#85fc84"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Rectangle.Style>
            </Rectangle>
            <TextBlock Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25,0,0,0" FontSize="11" TextAlignment="Left" Text="М-9 - автоматич. режим"/>
            <Rectangle Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0" Width="14" Height="14" Stroke="Black" StrokeThickness="1" RadiusX="10" RadiusY="10">
                <Rectangle.Style>
                    <Style TargetType="{x:Type Rectangle}">
                        <Setter Property="Fill" Value="Salmon"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding StatusArray[10].StatusItem}" Value="True">
                                <Setter Property="Fill" Value="#85fc84"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Rectangle.Style>
            </Rectangle>
        </Grid>
    </Grid>
</UserControl>
