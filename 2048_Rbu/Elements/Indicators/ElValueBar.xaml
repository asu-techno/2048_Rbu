<UserControl x:Class="_2048_Rbu.Elements.Indicators.ElValueBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:_2048_Rbu.Elements.Indicators"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type={x:Type local:ElValueBar}, IsDesignTimeCreatable=False}"
             MouseEnter="Rect_OnMouseEnter" 
             MouseLeave="Rect_OnMouseLeave">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <ProgressBar Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                     Name="ProgressValue"
                     Orientation="Vertical"
                     Value="{Binding Value}">
            
            <ProgressBar.Style>
                <Style TargetType="ProgressBar">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ProgressBar">
                                <Grid x:Name="TemplateRoot">
                                    <Border Name="PART_Track" CornerRadius="1"
                                            Background="#C3C3C3"
                                            BorderBrush="#3B3C3D"
                                            BorderThickness="1">
                                    </Border>
                                    <Border Name="PART_Indicator" CornerRadius="1"
                                            Background="#19BF2B"
                                            BorderThickness="1"
                                            BorderBrush="#3B3C3D"
                                            HorizontalAlignment="Left">
                                    </Border>
                                </Grid>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="Orientation" Value="Vertical">
                                        <Setter Property="LayoutTransform" TargetName="TemplateRoot">
                                            <Setter.Value>
                                                <RotateTransform Angle="270"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>

                            </ControlTemplate>
                            
                        </Setter.Value>
                    </Setter>
                </Style>
            </ProgressBar.Style>
            
        </ProgressBar>

        <TextBlock Grid.Column="1"
                   Width="{Binding ElementName=ProgressValue, Path=Height}" 
                   Grid.Row="1"
                   TextAlignment="Center"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"
                   Padding="0">
            
            <Run Text="{Binding ElementName=ProgressValue, Path=Value, StringFormat={}{0:0}}"
                 FontFamily="{StaticResource Jost}"
                 FontSize="16" 
                 Foreground="#028A11"
                 FontWeight="Medium">
            </Run>
            
            <Run Text="%"
                 FontFamily="{StaticResource Jost}"
                 FontSize="14" 
                 Foreground="#333538"
                 FontWeight="Medium">
            </Run>
            
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding VisCheck}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
            
        </TextBlock>
        
    </Grid>
    
    
