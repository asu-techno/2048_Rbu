                            <controls:Scroll />
                        </GroupBox>
                        <GroupBox Header="Separators" Style="{DynamicResource ExampleGroupBoxStyle}">
                            <Separator
                                Grid.Column="0"
                                Margin="0,20,0,0"
                                VerticalAlignment="Bottom"
                                Background="Red" />
                        </GroupBox>
