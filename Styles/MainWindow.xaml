                Width="200"
                Padding="10,8"
                Header="Buttons">
                <TabItem.Resources>
                    <Style
                        x:Key="ExampleGroupBoxStyle"
                        BasedOn="{StaticResource GrayGroupBox}"
                        TargetType="{x:Type GroupBox}">
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                        <Setter Property="Margin" Value="0,10,0,10" />
                    </Style>
                </TabItem.Resources>
                <ScrollViewer Padding="10" HorizontalScrollBarVisibility="Auto">
                    <StackPanel>
                        <GroupBox Header="Buttons Flat" Style="{DynamicResource ExampleGroupBoxStyle}">
                            <controls:Buttons />
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

